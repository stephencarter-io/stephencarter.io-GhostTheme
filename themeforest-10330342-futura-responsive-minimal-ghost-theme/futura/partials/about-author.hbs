<!-- start about the author -->
{{# author}}
<div class="about-author clearfix">
	{{#if profile_image}}
		<a href="{{url}}"><img src="{{profile_image}}" alt="Author image" class="avatar pull-left"></a>
		{{else}}
		<a href="{{url}}"><img src="{{asset "images/default-user-image.jpg"}}" alt="Author image" class="avatar pull-left"></a>
	{{/if}}
	<div class="details">
		<div class="author">
			About <a href="{{url}}">{{name}}</a>
		</div>
		<div class="meta-info">
			{{#if location}}
				<span class="loaction"><i class="fa fa-home"></i>{{location}}</span>
			{{/if}}
			{{#if website}}
			<span class="website"><i class="fa fa-globe"></i><a href="{{website}}" targer="_BLANK">Website</a></span>
			{{/if}}
			{{#if twitter}}
			<span class="twitter"><a href="{{twitter_url}}"><i class="fa fa-twitter"></i></a></span>
			{{/if}}
			{{#if facebook}}
			<span class="facebook"><a href="{{facebook_url}}"><i class="fa fa-facebook"></i></a></span>
			{{/if}}
		</div>
		{{#if bio}}
		<div class="bio">
			{{bio}}
		</div>
		{{/if}}
	</div>
</div>
{{/author}}
<!-- end about the author -->